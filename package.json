{
  "name": "typescript-starter",
  "version": "1.0.0",
  "author": "Andr√© Mathlener",
  "description": "A simple TypeScript Starter Project",
  "keywords": [],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "check-types": "tsc",
    "check-types:watch": "tsc -w",
    "test": "vitest run src/",
    "test:watch": "vitest src/",
    "test:coverage": "vitest run src/ --coverage",
    "test:ci": "vitest run src/ --silent --coverage",
    "test:report": "vitest run --outputFile test-results/junit.xml --reporter default --reporter junit",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "start": "tsx src/index.ts",
    "katacombs": "tsx src/app.ts",
    "convert-tts": "tsx src/convert-text-to-speech.ts"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "dotenv": "^16.4.7",
    "elevenlabs": "^0.18.1",
    "gradient-string": "^3.0.0",
    "js-yaml": "^4.1.0",
    "play-sound": "^1.1.6",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8",
    "word-wrap": "^1.2.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.10",
    "@types/play-sound": "^1.1.2",
    "@vitest/coverage-v8": "^3.0.8",
    "@vitest/spy": "^3.0.8",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prettier": "^5.2.3",
    "typescript-eslint": "^8.26.1"
  }
}
